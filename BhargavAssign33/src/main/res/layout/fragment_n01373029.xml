<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/N01373029Fragment"
    tools:context=".Fragment3.N01373029Fragment">

    <TextView
        android:id="@+id/BhargavTVTilt1"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:layout_gravity="top"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:rotation="315"
        android:text="@string/rotateName"
        android:theme="@style/ObjectFragment3" />

    <TextView
        android:id="@+id/BhargavTVTilt2"
        android:layout_width="101dp"
        android:layout_height="114dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="top|end"
        android:rotation="45"
        android:text="@string/rotateLName"
        android:theme="@style/ObjectFragment3" />

    <LinearLayout
        android:id="@+id/BhargavLL"
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:layout_marginTop="140dp">

        <ImageView
            android:id="@+id/BhargavMoon"
            android:layout_width="100dp"
            android:layout_height="82dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/moon_round">
        </ImageView>
    </LinearLayout>

    <ImageView
        android:id="@+id/BhargavEarth"
        android:layout_width="191dp"
        android:layout_height="164dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="270dp"
        android:src="@mipmap/earth_round">
    </ImageView>

    <Button
        android:id="@+id/BhargavStartBtn2"
        android:layout_width="205dp"
        android:layout_height="76dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="580dp"
        android:text="@string/btnRotate">
    </Button>

    <Button
        android:id="@+id/BhargavStopBtn2"
        android:layout_width="205dp"
        android:layout_height="76dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="580dp"
        android:text="@string/btnStop">
    </Button>

</FrameLayout>